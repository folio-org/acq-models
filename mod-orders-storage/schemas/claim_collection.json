{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "collection of claim records",
  "type": "object",
  "properties": {
    "claims": {
      "description": "collection of claim records",
      "type": "array",
      "id": "claims",
      "items": {
        "type": "object",
        "$ref": "claim.json"
      }
    },
    "total_records": {
      "description": "The number of objects contained in this collection",
      "type": "integer"
    }
  },
  "additionalProperties": false,
  "required": [
    "claims",
    "total_records"
  ]
}
