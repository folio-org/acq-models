{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Order transactions summary",
  "type": "object",
  "properties": {
    "id": {
      "description": "UUID generated by storage module",
      "$ref": "../../common/schemas/uuid.json"
    },
    "purchaseOrderId": {
      "description": "UUID of the order these payments are associated with (Unique)",
      "$ref": "../../common/schemas/uuid.json"
    },
    "numTransactions": {
      "description": "Total number of transactions (encumbrances) expected for this order",
      "type": "integer"
    }
  },
  "additionalProperties": false,
  "required": [
    "purchaseOrderId",
    "numTransactions"
  ]
}
