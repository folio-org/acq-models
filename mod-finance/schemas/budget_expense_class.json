{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Budget expense class mapping schema",
  "type": "object",
  "extends" : {
    "$ref" : "../../common/schemas/entity.json"
  },
  "properties": {
    "id": {
      "description": "UUID of the expense class record",
      "type": "string",
      "$ref": "../../common/schemas/uuid.json"
    },
    "budgetId": {
      "description": "UUID of the budget record",
      "$ref": "../../common/schemas/uuid.json"
    },
    "expenseClassId": {
      "description": "UUID of the expense class record",
      "$ref": "../../common/schemas/uuid.json"
    },
    "status": {
      "javaType": "org.folio.rest.jaxrs.model.ExpenseClassStatus.Status",
      "description": "Status for expense class within the budget"
    }
  },
  "additionalProperties": false,
  "required": [
    "budgetId",
    "expenseClassId"
  ]
}
