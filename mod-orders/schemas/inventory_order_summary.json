{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Inventory order summary",
  "type": "object",
  "properties": {
    "polNumber": {
      "description": "POL number ",
      "type": "string",
      "$ref": "../../common/schemas/uuid.json"
    },
    "orderStatus": {
      "description": "Order status",
      "type": "string",
      "$ref": "../../mod-orders-storage/schemas/workflow_status.json"
    },
    "orderStatusDate": {
      "description": "Order status date",
      "type": "string",
      "format": "date-time"
    },
    "price": {
      "description": "Order summary price",
      "type": "number"
    },
    "currency": {
      "description": "ISO currency code",
      "type": "string",
      "$ref": "../../common/schemas/currency_code.json"
    }
  },
  "additionalProperties": false
}
