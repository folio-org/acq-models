{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Inventory order summary",
  "type": "object",
  "properties": {
    "polNumber": {
      "description": "POL number ",
      "type": "string",
      "$ref": "../../common/schemas/uuid.json"
    },
    "polReceiptStatus": {
      "description": "The purchase order line receipt status",
      "type": "object",
      "$ref": "../../mod-orders-storage/schemas/receipt_status.json"
    },
    "orderType": {
      "description": "the purchase order type",
      "type": "string",
      "enum": [
        "One-Time",
        "Ongoing"
      ]
    },
    "orderStatus": {
      "description": "Order status",
      "type": "string",
      "$ref": "../../mod-orders-storage/schemas/workflow_status.json"
    },
    "orderSentDate": {
      "description": "Order sent date",
      "type": "string",
      "format": "date-time"
    },
    "orderCloseReason": {
      "description": "Close reason for purchase order",
      "type": "object",
      "$ref": "../../mod-orders-storage/schemas/close_reason.json"
    }
  },
  "additionalProperties": false
}
