{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "A collection of check-ins",
  "type": "object",
  "properties": {
    "checkinItems": {
      "description": "List of checkin",
      "id": "checkinItems",
      "type": "array",
      "checkinItems": {
        "type": "object",
        "properties": {
          "po_line_id": {
            "description": "The id of the checkin po_line",
            "type": "string",
            "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$"
          },
          "numberOfItemsCheckedin": {
            "description": "The number of items to check-in",
            "type": "integer"
          },
          "pieces": {
            "description": "A collection of piece details",
            "id": "pieces",
            "type": "array",
            "piece": {
              "type": "object",
              "properties": {
                "barcode": {
                  "description": "The barcode assigned to the piece",
                  "type": "string"
                },
                "comment": {
                  "description": "The free form notes pertaining to the piece",
                  "type": "string"
                },
                "enumeration": {
                  "description": "The enumeration caption of the piece",
                  "type": "string"
                },
                "createItem": {
                  "description": "Whether or not to create an item record for this piece",
                  "type": "boolean"
                },   
                "isSupplement": {
                  "description": "Whether or not this is a supplementary material for this piece",
                  "type": "boolean"
                }, 
                "locationId": {
                  "description": "The id of the location",
                  "type": "string",
                  "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$"
                },
                "materialTypeId": {
                  "description": "The id of the materialType",
                  "type": "string",
                  "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$"
                },
                "productType": {
                  "description": "The type of the Product",
                  "type": "string"
                },
                "productTypeId": {
                  "description": "The id of the productType",
                  "type": "string",
                  "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$"
                },
                "accessionNumber": {
                  "description": "The number referencing physical item acquired by the library",
                  "type": "string"
                },
                "itemDescription": {
                  "description": "The description associated with the item record",
                  "type": "string"
                },
                "electronicBookPlate": {
                  "description": "A text that relates to the owner of the book",
                  "type": "string"
                }                                
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    },
    "totalRecords": {
      "description": "The total number of checkin items in the list",
      "type": "integer"
    }
  },
  "additionalProperties": false,
  "required": [
    "checkinItems",
    "enumeration",
    "locationId",
    "totalRecords"
  ]
}
